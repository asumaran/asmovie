{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "üöÄ Start API Dev",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev:api"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*webpack.*compiling.*",
          "endsPattern": "^.*webpack.*compiled.*"
        }
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
